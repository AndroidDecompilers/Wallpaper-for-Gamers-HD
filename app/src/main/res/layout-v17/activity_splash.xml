<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/splash"
    android:gravity="bottom"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="100.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96.0dip"
        android:background="#7e000000">

        <TextView
            android:id="@+id/textView"
            android:layout_width="207.0dip"
            android:layout_height="52.0dip"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginLeft="12.0dip"
            android:layout_marginStart="12.0dip"
            android:fontFamily="sans-serif"
            android:text="@string/splash_name"
            android:textColor="@color/white"
            android:textSize="36.0sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.313" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="49.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12.0dip"
            android:layout_marginStart="12.0dip"
            android:fontFamily="sans-serif"
            android:text="best wallpapers ever."
            android:textColor="@color/secondtextcolor"
            android:textSize="24.0sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginBottom="20.0dip"
        android:layout_marginTop="20.0dip"
        android:orientation="horizontal"
        android:weightSum="4.0">

        <Button
            android:id="@+id/btn_gall"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.0dip"
            android:layout_marginStart="9.0dip"
            android:layout_weight="2.0"
            android:background="@color/btn_gallery"
            android:padding="20.0dip"
            android:text="THE GALLERY"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_moreApp"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_weight="2.0"
            android:background="@color/black"
            android:padding="20.0dip"
            android:text="More APPS"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>